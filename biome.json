{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "files": {
    "includes": [
      "**",
      "!.nitro",
      "!.output",
      "!.tanstack",
      "!.wrangler",
      "!**/components/ui/*",
      "!**/hooks/use-mobile.ts",
      "!**/route-tree.gen.ts"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedImports": "error"
      },
      "nursery": {
        "useSortedClasses": "error"
      },
      "recommended": true
    }
  }
}
